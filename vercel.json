{
    "builds": [{
        "src": "portfolio/wsgi.py",
        "use": "@vercel/python",
        "config": { 
            "maxLambdaSize": "15mb",
            "runtime": "python3.12",
            "buildCommand": "apt-get update && apt-get install -y libjpeg-dev && pip install --no-cache-dir pillow"
        }
    }],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "portfolio/wsgi.py"
        }
    ]
}
